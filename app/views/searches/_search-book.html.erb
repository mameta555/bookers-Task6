<table class="table">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% books.each do |book|  %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(50, 50) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>