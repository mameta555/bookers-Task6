<table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
    </tr>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50, 50) %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
    <% end %>
</table>